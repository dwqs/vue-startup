{
    root: true,
    parserOptions: {
        parser: "babel-eslint",
        ecmaVersion: 7,
        sourceType: "module",
        allowImportExportEverywhere: false,
        ecmaFeatures: {
            jsx: true,
            modules: true
        }
    },
    env: {
        es6: true,
        node: true,
        browser: true
    },
    plugins: [
        "vue"
    ],
    extends: ["plugin:vue-libs/recommended"],
    rules: {
        quotes: [2, "single", { "allowTemplateLiterals": true }],
        linebreak-style: [2, "unix"],
        eqeqeq: [2, "always"],
        strict: [2, "global"],
        key-spacing: [2, { "afterColon": true }],
        no-console: 0,
        no-debugger: 0,
        no-empty: 0,
        no-unused-vars: 0,
        no-constant-condition: 0,
        no-undef: 0,
        no-trailing-spaces: 0
    }
}
